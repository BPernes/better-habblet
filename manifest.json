{
   "manifest_version":3,
   "name":"Habblet Sem Anúncios",
   "description":"Extensão que remove os painéis de anúncio e desabilita a rádio habblet",
   "version":"1.0",
   "icons":{
      "16":"images/icon-16.png",
      "32":"images/icon-32.png",
      "48":"images/icon-48.png",
      "128":"images/icon-128.png"
   },
   "action":{
      "default_popup": "./popup/popup.html",
      "default_icon":{
         "16":"images/icon-16.png",
         "32":"images/icon-32.png",
         "48":"images/icon-48.png",
         "128":"images/icon-128.png"
      }
   },
   "declarative_net_request": {
      "rule_resources" : [{
         "id": "ruleset_1",
         "enabled": true,
         "path": "rules/rules_1.json"
      }]
   },
   "background":{
      "service_worker":"background.js"
   },
   "content_scripts": [
      {
         "matches": ["https://www.habblet.city/hotel"],
         "css": ["content/styles/handItemMenu.css"],
         "js": [
            "utils/removeDomElements.js",
            "utils/handitems.js",
            "content/styles/shadowDomStyles.js",
            "content/managePanels.js",
            "content/handItemMenu.js"
         ],
         "all_frames": true
      }
   ],
   "web_accessible_resources": [
      {
       "resources": [ "images/menu-icon.png", "images/handitems/*.png" ],
       "matches": [ "https://www.habblet.city/*" ]
      }
   ],
   "permissions":[
      "activeTab",
      "tabs",
      "scripting",
      "storage",
      "declarativeNetRequest",
      "declarativeNetRequestFeedback"
   ]
}
