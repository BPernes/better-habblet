{
   "manifest_version":3,
   "name":"Habblet Sem Anúncios",
   "description":"Extensão que remove os painéis de anúncio e desabilita a rádio habblet",
   "version":"1.0",
   "icons":{
      "16":"/resources/images/icon-16.png",
      "32":"/resources/images/icon-32.png",
      "48":"/resources/images/icon-48.png",
      "128":"/resources/images/icon-128.png"
   },
   "action":{
      "default_popup": "/src/popup/popup.html",
      "default_icon":{
         "16":"/resources/images/icon-16.png",
         "32":"/resources/images/icon-32.png",
         "48":"/resources/images/icon-48.png",
         "128":"/resources/images/icon-128.png"
      }
   },
   "declarative_net_request": {
      "rule_resources" : [{
         "id": "ruleset_1",
         "enabled": true,
         "path": "rules/rules_1.json"
      }]
   },
   "background":{
      "service_worker":"/src/background.js"
   },
   "content_scripts": [
      {
         "matches": ["https://www.habblet.city/hotel"],
         "css": ["/src/content/styles/handItemMenu.css"],
         "js": [
            "/src/utils/removeDomElements.js",
            "/src/utils/handitems.js",
            "/src/content/styles/shadowDomStyles.js",
            "/src/content/managePanels.js",
            "/src/content/handItemMenu.js"
         ],
         "all_frames": true
      }
   ],
   "web_accessible_resources": [
      {
       "resources": [ "/resources/images/menu-icon.png", "/resources/images/handitems/*.png" ],
       "matches": [ "https://www.habblet.city/*" ]
      }
   ],
   "permissions":[
      "activeTab",
      "tabs",
      "scripting",
      "storage",
      "declarativeNetRequest",
      "declarativeNetRequestFeedback"
   ]
}
